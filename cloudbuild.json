{
    "steps": [{
            "name": "gcr.io/cloud-builders/git"
        },
        {
            "name": "gcr.io/cloud-builders/yarn",
            "args": [
                "install"
            ],
            "env": [
                "PROJECT_ROOT=vue-do"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/yarn",
            "args": [
                "run",
                "test:unit"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/yarn",
            "args": [
                "run",
                "build"
            ]
        }
    ]
}