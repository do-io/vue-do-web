{
    "steps": [{
            "name": "gcr.io/cloud-builders/git",
            "args": [
                "clone",
                "https://source.developers.google.com/p/do-io-vue/r/github_do-io_vue-do-web"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/yarn",
            "args": [
                "install"
            ],
            "env": [
                "PROJECT_ROOT=vue-do-web"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/yarn",
            "args": [
                "run",
                "test:unit"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/yarn",
            "args": [
                "run",
                "build"
            ]
        }
    ]
}